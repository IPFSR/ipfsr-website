{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["components/ui/*.tsx", "components/ui/*.ts"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useArrowFunction": "error"
			},
			"correctness": {
				"noUnusedVariables": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"bracketSameLine": true,
			"enabled": true,
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"jsxQuoteStyle": "single",
			"trailingComma": "none",
			"arrowParentheses": "asNeeded"
		}
	}
}
